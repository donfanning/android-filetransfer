{
    "release": "./dist/assets",
    "process": [
        {
            "name": "bundle",
            "scripts": [
                "./assets/js/global*.js",
                "./assets/js/helpers*.js",
                "./assets/js/*.js",
                "./components/*/js/**/*.js"
            ],
            "styles": [
                "./assets/css/reset*.{scss,sass,css}",
                "./assets/css/default*.{scss,sass,css}",
                "./assets/css/*.{scss,sass,css}",
                "./components/*/css/**/*.{scss,css,sass}"
            ]
        }, {
            "name": "dependencies",
            "scripts": [
                "./assets/vendor/jquery/dist/jquery.js",
                "./assets/vendor/hask/dist/hask.js"
            ],
            "styles": [
                "./assets/css/fonts*.{scss,css}"
            ]
        }, {
            "name": "client",
            "scripts": [
                "./assets/vendor/angular/angular.js",
                "./assets/vendor/angular-route/angular-route.js",
                "./views/client.js",
                "./views/_global/**/*.js",
                "./views/*/*.js"
            ],
            "styles": []
        }
    ],
    "copy": {
        "./dist/assets/fonts": [
            "./assets/fonts/**/*.{eot,svg,ttf,woff}"
        ],
        "./dist/assets/img": [
            "./assets/img/**/*.{jpeg,jpg,png,gif,svg,ico}"
        ]
    }
}
